        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.3",
        "@types/nodemailer": "^7.0.4",
        "@types/pg": "^8.16.0",
        "prisma": "^7.2.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
